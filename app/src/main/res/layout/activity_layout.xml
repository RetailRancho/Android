<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context="io.rancho.retail.beaconstac.activities.LayoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_content">
        <ImageView
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:id="@+id/layout_room"
            android:src="@drawable/layout1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <ImageView
            android:id="@+id/layout_beacons"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:src="@drawable/layoutup"
            android:visibility="invisible">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/info_layout"
        android:layout_below="@+id/main_content">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/product_photo"
            android:src="@drawable/tshirth"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:id="@+id/product_name"
            android:background="#FFFFFF"
            android:text="\nName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/product_photo"/>
        <TextView
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:id="@+id/product_price"
            android:background="#FFFFFF"
            android:text="\nPrice"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_below="@+id/product_name"
            android:layout_toRightOf="@+id/product_photo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:id="@+id/product_info"
            android:textSize="18sp"
            android:background="#FFFFFF"
            android:text="Product information"
            android:layout_below="@+id/product_photo"
            />
    </RelativeLayout>
</RelativeLayout>
